@page "/hasta-duzenle/{Id:int}"
@using SAT242516005.Data
@inject ApplicationDbContext db
@inject NavigationManager NavigationManager

<div class="container mt-3">
    <h3>Hasta Bilgilerini Düzenle</h3>

    @if (hastaModel == null)
    {
        <div class="alert alert-info">Hasta bilgileri getiriliyor...</div>
    }
    else
    {
        <EditForm Model="hastaModel" OnValidSubmit="UpdateHasta">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" />

            <div class="mb-3">
                <label class="form-label">Ad</label>
                <InputText class="form-control" @bind-Value="hastaModel.Ad" />
                <ValidationMessage For="@(() => hastaModel.Ad)" />
            </div>

            <div class="mb-3">
                <label class="form-label">Soyad</label>
                <InputText class="form-control" @bind-Value="hastaModel.Soyad" />
                <ValidationMessage For="@(() => hastaModel.Soyad)" />
            </div>

            <div class="mb-3">
                <label class="form-label">Doğum Tarihi</label>
                <InputDate class="form-control" @bind-Value="hastaModel.DogumTarihi" />
                <ValidationMessage For="@(() => hastaModel.DogumTarihi)" />
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-success me-2">Değişiklikleri Kaydet</button>
                <button type="button" class="btn btn-secondary" @onclick="Cancel">İptal</button>
            </div>
        </EditForm>
    }
</div>

@code {
    [Parameter] public int Id { get; set; }
    private Hasta hastaModel;

    protected override void OnParametersSet()
    {

        hastaModel = db.Hastalar.FirstOrDefault(h => h.HastaId == Id);
    }

    private void UpdateHasta()
    {
        if (hastaModel != null)
        {
            db.Hastalar.Update(hastaModel);
            db.SaveChanges();
            NavigationManager.NavigateTo("/hasta-liste");
        }
    }

    private void Cancel()
    {
        NavigationManager.NavigateTo("/hasta-liste");
    }
}