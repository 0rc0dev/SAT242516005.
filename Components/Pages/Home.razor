@page "/"
@using SAT242516005.Data.Abstract
@using SAT242516005.Data
@inject IMyDbModel_UnitOfWork UnitOfWork
@inject IJSRuntime JS

<PageTitle>Sağlık Personeli Vardiya Planlayıcı</PageTitle>
mehmetdıkmen
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow border-0">
                <div class="card-header bg-dark text-white text-center">
                    <h4 class="mb-0">Branşlara Göre Doktor Dağılımı</h4>
                </div>
                <div class="card-body" style="height: 450px;">
                    <canvas id="myChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var doktorlar = await UnitOfWork.Vardiyalar.GetDoktorlarAsync();

            var stats = doktorlar
                .GroupBy(d => d.Brans)
                .Select(g => new { Brans = string.IsNullOrEmpty(g.Key) ? "Diğer" : g.Key, Count = g.Count() })
                .ToList();

            if (stats.Any())
            {
                var labels = stats.Select(x => x.Brans).ToArray();
                var counts = stats.Select(x => x.Count).ToArray();
                await JS.InvokeVoidAsync("setupChart", labels, counts);
            }
        }
    }
}
